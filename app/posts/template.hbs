<h1>Posts</h1>

<button {{action "makeRed"}}>Red</button>
<button {{action "makeBlue"}}>Blue</button>
<hr />
<button {{action "setColor" "black"}}>Black</button>
<button {{action "setColor" "white"}}>White</button>
<button {{action "setColor" "unknown"}}>unknown</button>
<hr />
<button {{action "changeColor" color}}>Change color</button>
<hr />
<button {{action "move" 'up'}}>Up</button>
<button {{action "move" 'down'}}>Down</button>
<button {{action "move" 'left'}}>Left</button>
<button {{action "move" 'right'}}>Right</button>
<hr />
<div style="
    width: 50px; 
    height: 50px; 
    border: 2px solid gray;
    background-color: {{color}};
    position: fixed;
    top: {{top}}px;
    right: {{right}}px;
    ">{{color}}</div>
